{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MistLuna",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "..",
    "devUrl": "http://127.0.0.1:1420",
    "beforeDevCommand": "python -m http.server 1420 --directory .."
  },
  "app": {
    "windows": [
      {
        "title": "Mist // Lunar Companion",
        "width": 300,
        "height": 300,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "center": true,
        "resizable": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "menuOnLeftClick": true
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "icons/tray_cyan.png",
      "icons/tray_red.png",
      "icons/tray_idle.png"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
